<p id="notice"><%= notice %></p>

<h1>States</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Acronym</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @states.each do |state| %>

      <tr>
        <td><%= state.name %></td>
        <td><%= state.acronym %></td>
        <td><%= link_to 'Show', country_state_path(state.country_id, state) %></td>
        <td><%= link_to 'Edit', edit_country_state_path(state.country_id, state) %></td>
        <td><%= link_to 'Destroy', country_state_path(state.country_id, state), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New State', new_country_state_path %>
